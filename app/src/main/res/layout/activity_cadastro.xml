<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Conversion"
    tools:context="com.example.fernandezbank.Autenticacao.CadastroActivity">


    -<ScrollView
    android:layout_height="0dp"
    android:layout_width="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:fillViewport="true"
    android:id="@+id/scrollView2">


    -<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="24dp">


    -<com.google.android.material.textfield.TextInputLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColorHint="@color/black"
    android:hint="Nome">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edtNome"
        android:textColor="@color/black"
        android:inputType="text"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_user_blue"
        android:backgroundTint="@color/red"/>

</com.google.android.material.textfield.TextInputLayout>


    -<com.google.android.material.textfield.TextInputLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColorHint="@color/black"
    android:hint="Email"
    android:layout_marginTop="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edtEmail"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_email_login"
        android:backgroundTint="@color/red"/>

</com.google.android.material.textfield.TextInputLayout>


    -<com.google.android.material.textfield.TextInputLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColorHint="@color/black"
    android:hint="Telefone"
    android:layout_marginTop="16dp">

    <com.santalu.maskara.widget.MaskEditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edtTelefone"
        android:textColor="@color/black"
        android:inputType="number"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_celular_login"
        android:backgroundTint="@color/red"
        app:maskStyle="completable"
        app:maskCharacter="_"
        app:mask="(__) _____-____"/>

</com.google.android.material.textfield.TextInputLayout>


    -<com.google.android.material.textfield.TextInputLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColorHint="@color/black"
    android:hint="Senha"
    android:layout_marginTop="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:drawableStart="@drawable/ic_senha_login"
        android:drawablePadding="16dp"
        android:inputType="textPassword"
        android:textColor="@color/black" />

</com.google.android.material.textfield.TextInputLayout>


    -<com.google.android.material.textfield.TextInputLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textColorHint="@color/black"
    android:hint="Confirmar senha"
    android:layout_marginTop="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edtConfirmaSenha"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_senha_login"
        android:backgroundTint="@color/red"/>

</com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btnCriarConta"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:text="Criar conta"
        android:background="@drawable/bg_btn"
        android:onClick="validaDados"
        android:textSize="16sp"
        android:textAllCaps="false"/>

    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginTop="8dp"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_gravity="center"/>

</LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>